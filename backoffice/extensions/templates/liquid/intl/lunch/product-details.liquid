<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, shrink-to-fit=no"
    />
    <meta name="description" content="" />
    <meta name="author" content="" />

    <title>SSR</title>

    <!-- Custom fonts for this template-->
    <link rel="stylesheet" href="/public/static/vendor/css/bootstrap.min.css" />
    <link
      rel="stylesheet"
      href="/public/static/vendor/css/font-awesome.min.css"
    />
    <link
      href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
      rel="stylesheet"
    />
    <!-- Custom styles for this template-->
    <link href="/public/static/css/admin.css" rel="stylesheet" />
  </head>

  <body id="page-top">
  <div class="preloader"> <img class="preloader-icon" src="/public/static/img/loader.gif" alt="loading"> </div>
    <!-- Page Wrapper -->
    <div id="wrapper">
      <!-- Content Wrapper -->
      <div id="content-wrapper" class="d-flex flex-column">
        <!-- Main Content -->
        <div id="content">
          <!-- Topbar -->
          {% comment %}  {% endcomment %}
          <!-- End of Topbar -->

          <!-- Begin Page Content -->
          <div class="container-fluid">
            <h3 style="margin-top: 20px">Statistiques du produit: 
                <a href="{{ project_url }}/admin/content/products/{{ data.product.id }}" target='blank' class="btn see-btn">
                    <img style="width: 35px; height: 35px" src="{{ project_url }}/assets/{{ data.product.image }}?access_token={{ accessToken }}" alt=""/> 
                    {{ data.product.title }}  
                    <span style="font-size: 20px">( {{ data.unitPrice }} )</span> 
                 </a>
            </h3>
           
            <!-- Content Row -->
            <!-- Content Row -->
            <div class="row">

                <!-- Earnings (Monthly) Card Example -->
                <div class="col-xl-3 col-md-6 mb-4">
                    <div class="card border-left-primary shadow h-100 py-2">
                        <div class="card-body">
                            <div class="row no-gutters align-items-center">
                                <div class="col mr-2">
                                    <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                        Chiffre d'affaire total</div>
                                    <div class="h5 mb-0 font-weight-bold text-gray-800">{{data.totalSoldPrice}}</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Earnings (Monthly) Card Example -->
                <div class="col-xl-3 col-md-6 mb-4">
                    <div class="card border-left-success shadow h-100 py-2">
                        <div class="card-body">
                            <div class="row no-gutters align-items-center">
                                <div class="col mr-2">
                                    <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                        Valeur marchande du produit</div>
                                    <div class="h5 mb-0 font-weight-bold text-gray-800">{{data.totalPrice}}</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>


                <!-- Earnings (Monthly) Card Example -->
                <div class="col-xl-3 col-md-6 mb-4">
                    <div class="card border-left-info shadow h-100 py-2">
                        <div class="card-body">
                            <div class="row no-gutters align-items-center">
                                <div class="col mr-2">
                                    <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                                        Nombre de commandes traitées</div>
                                    <div class="h5 mb-0 font-weight-bold text-gray-800">{{data.totalCompletedOrders}}</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>


                <!-- Earnings (Monthly) Card Example -->
                <div class="col-xl-3 col-md-6 mb-4">
                    <div class="card border-left-warning shadow h-100 py-2">
                        <div class="card-body">
                            <div class="row no-gutters align-items-center">
                                <div class="col mr-2">
                                    <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                                        Nombre total de  commandes</div>
                                    <div class="h5 mb-0 font-weight-bold text-gray-800">{{data.totalOrders}}</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>


            <div class="row">
                <!-- Area Chart -->
                <div class="col-xl-8 col-lg-7">
                    <div class="card shadow mb-4">
                        <!-- Card Header - Dropdown -->
                        <div
                            class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                            <h6 class="m-0 font-weight-bold text-primary">Évolution du chiffre d'affaire sur l'année en cours</h6>
    
                        </div>
                        <!-- Card Body -->
                        <div class="card-body">
                            <div class="chart-area">
                                <canvas id="revenuesTimeSeries"></canvas>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Pie Chart -->
                <div class="col-xl-4 col-lg-5">
                    <div class="card shadow mb-4">
                        <!-- Card Header - Dropdown -->
                        <div
                            class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                            <h6 class="m-0 font-weight-bold text-primary">Détails de la journée</h6>
                        </div>
                        <!-- Card Body -->
                        <ul>
                            <li>Nombre total de commandes traitées: {{ data.dailyCompletedOrders }}</li>
                            <li>Chiffre d'affaire de la journée: {{ data.dailySoldPrice }}</li>
                        </ul>
                    </div>
                </div>
            </div>


          </div>
          <!-- /.container-fluid -->
        </div>
        <!-- End of Main Content -->
      </div>
      <!-- End of Content Wrapper -->
    </div>
    <!-- End of Page Wrapper -->

    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
      <i class="fa fa-angle-up"></i>
    </a>

    <!-- Bootstrap core JavaScript-->
    <script src="/public/static/vendor/js/jquery.min.js"></script>
    <script src="/public/static/vendor/js/bootstrap.bundle.min.js"></script>
    <script src="/public/static/vendor/js/html2pdf.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="/public/static/vendor/js/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="/public/static/vendor/js/admin-bundle.min.js"></script>

    <!-- Page level plugins -->
    <script src="/public/static/vendor/js/chart.min.js"></script>

    <!-- Page level custom scripts -->
    <script>
      // Set new default font family and font color to mimic Bootstrap's default styling
      Chart.defaults.global.defaultFontFamily = 'Nunito', '-apple-system,system-ui,BlinkMacSystemFont,"Segoe UI",Roboto,"Helvetica Neue",Arial,sans-serif';
      Chart.defaults.global.defaultFontColor = '#858796';

      // Area Chart Example
      var ctx = document.getElementById("revenuesTimeSeries");
      var revenuesChartConfig = {{revenuesChartConfig | json}}
      var myLineChart = new Chart(ctx, revenuesChartConfig);

    </script>
  </body>
</html>
